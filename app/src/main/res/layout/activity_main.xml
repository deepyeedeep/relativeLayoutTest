<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/image_naver"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_logo_naver"
        android:layout_alignTop="@id/edit_email"
        android:layout_toStartOf="@id/edit_email"/>
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="E-mail@maver.com"
        android:layout_above="@id/edit_password"
        android:layout_alignStart="@id/edit_password"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:hint="Password"
        android:inputType="textPassword" />
    <Button
        android:id="@+id/butt_login"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="LogIn"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_toEndOf="@id/edit_email"
        android:layout_alignTop="@id/edit_email"/>
    <Button
        android:id="@+id/butt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_below="@id/edit_password"
        android:layout_alignStart="@id/edit_password"/>
    <Button
        android:id="@+id/butt_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I forgot PW"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_below="@id/edit_password"
        android:layout_toEndOf="@id/butt_register"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>